<section class="container">
        <header class="text-center">
            <h1>Burger App</h1>
        </header>
        <section class="row">
            <section id="left" class="col-sm-4">
                {{#each burgers}}
                  {{#unless devoured}}    
                      <section class="burger">    
                        <p id="id">{{ this.id }}</p>
                        <p id="name">{{ this.burger_name }}</p>
                        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                        <button type="submit" id="devoured">Devour it!</button>
                        </form>
                      </section>
                  {{/unless}}    
                {{/each}}
            </section>
            <section class="col-sm-4">
                <h2>Add a Burger</h2>
                <form class="create-update-form" action="burgers/insert" method="POST">
                  <div class="form-group">
                    <label for="burger">Burger Name:</label>
                    <input type="text" id="burger" name="burger_name">
                  </div>
                  <button type="submit">Add Burger</button>
                </form>
            </section>
            <section id="right" class="col-sm-4">
                {{#each burgers}}
                  {{#if devoured}}
                      <section class="burger">    
                        <p id="id">{{ this.id }}</p>
                        <p id="name">{{ this.burger_name }}</p>
                    </section>
                  {{/if}}
                {{/each}}
            </section>
        </section>
    </section>